<h1><%= @category.name %></h1>

<ul>
  <% @category.bookmarks.each do |bookmark| %>
    <li>
      <h3><%= bookmark.recipe.name %></h3>
      <p><%= bookmark.recipe.description %></p>
      <%= link_to 'Delete', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%= link_to 'Back', categories_path %>
    </li>
  <% end %>
</ul>

<%= link_to "Add Recipe to Category", new_category_bookmark_path(@category) %>
<%= link_to "Back to Categories", categories_path %>
