<div class="form-new">
  <h1>Create a new category</h1>

  <%= simple_form_for @category do |f| %>
    <%= f.input :name, placeholder:"Category name to add..." %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class:"btn btn-info w-100" %>
  <% end %>

  <%= link_to "Back to Categories", categories_path, class: "btn btn-secondary mt-4 w-100" %>
</div>
